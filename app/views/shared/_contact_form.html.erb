<div id="contacto" class="container mt-5">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h2 class="mb-4"><strong>Contacto</strong></h2>
      <h4 class="mb-4">¿Tenés una consulta? Escribinos.</h4>
      <%= form_with url: contact_path, local: true, html: { multipart: true } do |form| %>
        <div class="form-group">
          <%= form.label :name, 'Nombre y Apellido' %>
          <%= form.text_field :name, class: 'form-control input-line-contact' %>
        </div>
        <div class="form-group">
          <%= form.label :email, 'Correo Electrónico' %>
          <%= form.email_field :email, class: 'form-control input-line-contact' %>
        </div>
        <div class="form-group">
          <%= form.label :phone, 'Número de Teléfono' %>
          <%= form.text_field :phone, class: 'form-control input-line-contact' %>
        </div>
        <div class="form-group">
          <%= form.label :message, 'Mensaje' %>
          <%= form.text_area :message, class: 'form-control input-line-contact' %>
        </div>
        <div class="form-group">
          <%= form.label :attachment, 'Adjuntar Archivo (opcional)' %>
          <%= form.file_field :attachment, class: 'form-control input-line-contact' %>
        </div>
        <div class="form-group mt-3">
          <%= form.submit 'Enviar', class: 'btn btn-primary btn-lg btn-custom w-100 mb-5 rounded-5' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-4 mx-auto my-auto">
      <div class="card p-5 rounded-5" style="background-color: #E1E4E3">
        <div class="card-body text-center">
          <h5 class="card-title mb-0">Casa central:</h5>
          <p class="card-text mt-0">
            Rambla República de México 5863<br>
            Montevideo
          </p>
          <h5 class="card-title mt-3 mb-0">Sucursal Maldonado:</h5>
          <p class="card-text mt-0">
            Calle Av. España, Parada 26
          </p>
          <p class="card-text">
            Lun - Vie 9:00 - 18:00<br>
            Sábados 9:00 - 13:00
          </p>
          <div class="card-text">
            <i class="fa-solid fa-phone-volume"></i>
            <strong class="fs-3">0800 8000</strong>
          </div>
          <div class="card-text">
            <%= link_to "https://wa.me/+542615041558", target: "_blank", class: "nav-link" do %>
              <i class="fab fa-whatsapp fa-lg"></i> Escribinos por WhatsApp
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
